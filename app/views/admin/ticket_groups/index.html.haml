.row
  .col-md-12
    .page-header
      %h1
        Listing Ticket Groups
        = link_to 'New Ticket group', new_admin_conference_ticket_group_path(@conference), class: 'btn btn-warning pull-right'
.row
  .col-md-12
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Vat percent
          %th Actions

      %tbody
        - @ticket_groups.each do |ticket_group|
          %tr
            %td= ticket_group.name
            %td= ticket_group.vat_percent
            %td
              .btn-group
                = link_to 'Show', admin_conference_ticket_group_path(@conference, ticket_group), class: 'btn btn-success'
                = link_to 'Edit', edit_admin_conference_ticket_group_path(@conference, ticket_group), class: 'btn btn-primary'
                = link_to 'Destroy', admin_conference_ticket_group_path(@conference, ticket_group), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
